<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8" />
  <title>Chatbot – Horizon</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <style>
    body { font-family: Arial, sans-serif; background:#f6f7fb; margin:0; }
    .widget { position:fixed; bottom:20px; right:20px; width:360px; height:520px;
              background:#fff; border-radius:14px; box-shadow:0 10px 25px rgba(0,0,0,.15);
              display:flex; flex-direction:column; overflow:hidden; }
    .header { background:#0b1b33; color:#fff; padding:12px 16px; font-weight:700; }
    .box { flex:1; padding:12px; overflow-y:auto; background:#fafbff; }
    .msg { margin:6px 0; }
    .me  { color:#0b1b33; }
    .bot { color:#0c6; }
    .bar { display:flex; border-top:1px solid #e5e7ef; }
    .bar input { flex:1; border:0; padding:12px; font-size:14px; outline:none; }
    .bar button{ border:0; background:#0066ff; color:#fff; padding:0 16px; cursor:pointer; }
  </style>
</head>
<body>
  <div class="widget">
    <div class="header">Horizon — Asistente</div>
    <div id="box" class="box">
      <div class="msg bot"><b>Bot:</b> ¡Hola! Soy el asistente de Horizon. ¿En qué puedo ayudarte?</div>
    </div>
    <div class="bar">
      <input id="inp" type="text" placeholder="Escribe tu mensaje…" />
      <button onclick="send()">Enviar</button>
    </div>
  </div>

  <script>
    const box = document.getElementById('box');
    const inp = document.getElementById('inp');

    function add(role, text){
      const div = document.createElement('div');
      div.className = 'msg ' + (role === 'user' ? 'me' : 'bot');
      div.innerHTML = `<b>${role === 'user' ? 'Tú' : 'Bot'}:</b> ${text}`;
      box.appendChild(div);
      box.scrollTop = box.scrollHeight;
    }

    async function send(){
      const msg = inp.value.trim();
      if(!msg) return;
      add('user', msg);
      inp.value = '';

      try{
        // OJO: como servimos el HTML desde el MISMO servicio de Render,
        // usamos ruta relativa. ¡No hay CORS!
        const r = await fetch('/chat', {
          method:'POST',
          headers:{'Content-Type':'application/json'},
          body: JSON.stringify({ message: msg })
        });
        const data = await r.json();
        add('assistant', data.reply || '(sin respuesta)');
      }catch(e){
        add('assistant', 'Error al conectar con el servidor.');
      }
    }

    // Enviar con Enter
    inp.addEventListener('keydown', (e)=>{ if(e.key==='Enter') send(); });
  </script>
</body>
</html>
